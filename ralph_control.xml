<root>
	<settings>
		<!-- Set to False to stop control.py from running -->
		<enabled>True</enabled>
		<!-- Set target humidity level -->
		<targetRH>43</targetRH>
		<!-- Set tolerance of how humidity level -->
		<toleranceRH>2</tolerance>		
		<!-- Minimum time for humidifier to run -->
		<runMinutesRH>5</runMinutes>
		<!-- Set the friendly name of your WeMo switch -->
		<switchNameRH>humidifier</switchName>
		<!-- Set target temperature level -->
		<targetTemp>65</targetRH>
		<!-- Set tolerance of how temperature level -->
		<toleranceTemp>5</tolerance>		
		<!-- Minimum time for fridge to run -->
		<runMinutesTemp>10</runMinutes>
		<!-- Set the friendly name of your WeMo switch -->
		<switchNameTemp>temperature</switchName>
	</settings>
	<!-- DON'T CHANGE ANYTHING BELOW THIS LINE! -->
	<status>
		<startedDateTime />
		<stoppedDateTime />
		<nextScheduledStart />
		<nextScheduledStop />
		<lastRH />
		<lastTemp />
		<lastUpdate />
		<lastStatus />
		<lastDiscovery />
	</status>
</root>
